@model IEnumerable<AnimeProject.Models.Anime>

    @{
        ViewData["Title"] = "Animes";
    }

    <h1>@ViewBag.MonthDate's Animes</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Episodes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AiringDay)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Episodes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AiringDay)
                </td>
              
            </tr>
            }
        </tbody>
    </table>
